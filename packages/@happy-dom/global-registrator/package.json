{
	"name": "@happy-dom/global-registrator",
	"version": "0.0.0",
	"license": "MIT",
	"homepage": "https://github.com/capricorn86/happy-dom/tree/master/packages/@happy-dom/global",
	"repository": "https://github.com/capricorn86/happy-dom",
	"author": "David Ortner",
	"description": "Use Happy DOM globally in a Node.js environment for testing.",
	"main": "lib/index.js",
	"type": "module",
	"keywords": [
		"jsdom",
		"happy",
		"dom",
		"webcomponents",
		"web",
		"component",
		"custom",
		"elements",
		"global",
		"register",
		"registrator"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"compile": "tsc",
		"watch": "npm run compile && tsc -w --preserveWatchOutput",
		"test": "npm run compile && npm run test:react && npm run test:bun",
		"test:debug": "npm run compile && tsc --project ./test/react && node --inspect-brk ./tmp/react/React.test.js",
		"test:react": "tsc --project ./test/react && node ./tmp/react/React.test.js",
		"test:bun": "bun test ./test/bun/Bun.test.js"
	},
	"dependencies": {
		"happy-dom": "^0.0.0"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"@types/node": "^20.0.0",
		"prettier": "^2.6.0",
		"typescript": "^5.0.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
